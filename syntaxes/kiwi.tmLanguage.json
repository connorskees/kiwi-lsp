{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Kiwi",
	"scopeName": "source.kiwi",
	"fileTypes": [
		"kiwi"
	],
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#package"
		},
		{
			"include": "#enum"
		},
		{
			"include": "#struct"
		},
		{
			"include": "#message"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.kiwi",
					"begin": "//",
					"end": "$\\n?"
				}
			]
		},
		"package": {
			"begin": "(package)(\\s+)([A-Za-z0-9_]+)",
			"beginCaptures": {
				"1": {
					"name": "keyword.declaration.kiwi"
				},
				"3": {
					"name": "entity.name.type.kiwi"
				}
			},
			"end": ";|\\n"
		},
		"enum": {
			"begin": "(enum)(\\s+)([A-Za-z0-9_]+)(\\s+)(\\{)?",
			"beginCaptures": {
				"1": {
					"name": "keyword.declaration.kiwi"
				},
				"3": {
					"name": "entity.name.type.kiwi"
				}
			},
			"end": "\\}",
			"patterns": [
				{
					"include": "#comments"
				},
				{
					"begin": "([A-Za-z0-9_]+)\\s+=\\s+([A-Za-z0-9_]+)(\\s+)?(\\[deprecated\\])?(\\[deprecated\\(\".*\"\\)\\])?",
					"beginCaptures": {
						"1": {
							"name": "variable.other.member.kiwi"
						},
						"2": {
							"name": "constant.numeric.kiwi"
						},
						"4": {
							"name": "invalid.deprecated.kiwi"
						},
						"5": {
							"name": "invalid.deprecated.kiwi"
						}
					},
					"end": ";|\\}|\\n"
				}
			]
		},
		"struct": {
			"begin": "(struct)(\\s+)([A-Za-z0-9_]+)(\\s+)(\\{)?",
			"beginCaptures": {
				"1": {
					"name": "keyword.declaration.kiwi"
				},
				"3": {
					"name": "entity.name.type.kiwi"
				}
			},
			"end": "\\}",
			"patterns": [
				{
					"include": "#comments"
				},
				{
					"begin": "([A-Za-z0-9_]+)(\\[\\]?)?(\\s+)([A-Za-z0-9_]+)",
					"beginCaptures": {
						"1": {
							"name": "entity.name.type.kiwi"
						},
						"4": {
							"name": "variable.other.member.kiwi"
						}
					},
					"end": ";|\\}|\\n"
				}
			]
		},
		"message": {
			"begin": "(message)(\\s+)([A-Za-z0-9_]+)(\\s+)(\\{)?",
			"beginCaptures": {
				"1": {
					"name": "keyword.declaration.kiwi"
				},
				"3": {
					"name": "entity.name.type.kiwi"
				}
			},
			"end": "\\}",
			"patterns": [
				{
					"include": "#comments"
				},
				{
					"begin": "([A-Za-z0-9_]+)(\\[\\]?)?(\\s+)([A-Za-z0-9_]+)(\\s+)?=?(\\s+)?([0-9]+)?(\\s+)?(\\[deprecated\\])?",
					"beginCaptures": {
						"1": {
							"name": "entity.name.type.kiwi"
						},
						"4": {
							"name": "variable.other.member.kiwi"
						},
						"7": {
							"name": "constant.numeric.kiwi"
						},
						"9": {
							"name": "invalid.deprecated.kiwi"
						}
					},
					"end": ";|\\}|\\n"
				}
			]
		}
	}
}